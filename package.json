{
	"name": "@forge42/base-stack",
	"private": true,
	"sideEffects": false,
	"license": "MIT",
	"type": "module",
	"scripts": {
		"clean": "git clean -fdX --exclude=\"!.env\"",
		"execute": "tsx",
		"script": "npm run execute scripts/setup.ts",
		"cleanup": "npm run script scripts/cleanup.ts",
		"build": "react-router build",
		"dev": "react-router dev",
		"lint": "biome check .",
		"lint:ci": "biome ci .",
		"lint:fix": "biome check --write .",
		"start": "node ./build/server/index.js",
		"test": "vitest run",
		"test:ui": "vitest --ui --api 9527",
		"test:cov": "vitest run --coverage",
		"typecheck": "tsc",
		"validate": "npm run check && npm run typecheck && npm run test && npm run check:unused",
		"check": "biome check .",
		"check:fix": "biome check --fix .",
		"check:unused": "knip --max-issues 1",
		"check:unused:fix": "knip --fix",
		"typegen": "react-router typegen",
		"postinstall": "npm run typegen"
	},
	"dependencies": {
		"@forge42/seo-tools": "^1.3.0",
		"@react-router/node": "^7.0.0",
		"clsx": "^2.1.1",
		"hono": "^4.6.3",
		"i18next": "^23.15.2",
		"i18next-browser-languagedetector": "^8.0.0",
		"i18next-fetch-backend": "^6.0.0",
		"isbot": "^5.1.17",
		"pretty-cache-header": "^1.0.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-i18next": "^15.0.2",
		"react-router": "^7.0.0",
		"react-router-hono-server": "https://pkg.pr.new/rphlmr/react-router-hono-server@10.tgz",
		"remix-hono": "^0.0.16",
		"remix-i18next": "https://pkg.pr.new/AlemTuzlak/remix-i18next@047de17",
		"tailwind-merge": "^2.5.3",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.3",
		"@dotenvx/dotenvx": "^1.16.0",
		"@react-router/dev": "^7.0.0",
		"@react-router/fs-routes": "^7.0.0",
		"@types/node": "^22.7.5",
		"@types/prompt": "^1.1.9",
		"@types/react": "^18.3.11",
		"@types/react-dom": "^18.3.0",
		"@vitest/coverage-v8": "^2.1.2",
		"@vitest/ui": "^2.1.2",
		"autoprefixer": "^10.4.20",
		"chalk": "^5.3.0",
		"happy-dom": "^15.7.4",
		"knip": "^5.33.1",
		"lefthook": "^1.7.18",
		"postcss": "^8.4.47",
		"prompt": "^1.3.0",
		"react-router-devtools": "1.0.1",
		"tailwindcss": "^3.4.13",
		"tsx": "^4.19.1",
		"typescript": "^5.6.2",
		"vite": "^5.4.8",
		"vite-plugin-icons-spritesheet": "^2.2.1",
		"vite-tsconfig-paths": "^5.0.1",
		"vitest": "^2.1.2"
	},
	"packageManager": "pnpm@9.8.0",
	"optionalDependencies": {
		"@rollup/rollup-linux-x64-gnu": "^4.24.0"
	},
	"engines": {
		"node": ">=20.15.1",
		"pnpm": ">=9.8.0"
	}
}
